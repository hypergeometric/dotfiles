[user]
  name = Ben Shepheard
  email = ben@codeagency.com

[credential]
  helper = osxkeychain

[core]
  excludesfile = ~/.gitignore_global

[push]
  default = simple

[pull]
  rebase = true

[rebase]
  autostash = true

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE
